        function scheduleNotifications() {
            if (Notification.permission === 'granted') {
                const now = new Date();
                const prayerTimes = [
                    { name: 'Ø§Ù„ÙØ¬Ø±', time: '04:45' },
                    { name: 'Ø§Ù„Ø¸Ù‡Ø±', time: '12:30' },
                    { name: 'Ø§Ù„Ø¹ØµØ±', time: '15:45' },
                    { name: 'Ø§Ù„Ù…ØºØ±Ø¨', time: '18:20' },
                    { name: 'Ø§Ù„Ø¹Ø´Ø§Ø¡', time: '19:50' }
                ];
                
                prayerTimes.forEach(prayer => {
                    const [hours, minutes] = prayer.time.split(':').map(Number);
                    const prayerDate = new Date();
                    prayerDate.setHours(hours, minutes, 0, 0);
                    
                    // Ø¥Ø°Ø§ Ù…Ø± Ø§Ù„ÙˆÙ‚Øª Ø§Ù„ÙŠÙˆÙ…ØŒ Ø¬Ø¯ÙˆÙ„ Ù„Ù„ØºØ¯
                    if (prayerDate < now) {
                        prayerDate.setDate(prayerDate.getDate() + 1);
                    }
                    
                    const timeUntilPrayer = prayerDate.getTime() - now.getTime();
                    
                    if (timeUntilPrayer > 0) {
                        setTimeout(() => {
                            new Notification(`ğŸ•Œ Ø­Ø§Ù† ÙˆÙ‚Øª ØµÙ„Ø§Ø© ${prayer.name}`, {
                                body: `Ø­Ø§Ù† Ø§Ù„Ø¢Ù† Ù…ÙˆØ¹Ø¯ ØµÙ„Ø§Ø© ${prayer.name}`,
                                icon: 'data:image/svg+xml;base64,',
                                requireInteraction: true
                            });
                        }, timeUntilPrayer);
                    }
                });
            }
        }


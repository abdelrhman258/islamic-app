        // ØªØ­Ø¯ÙŠØ« Ù…ÙˆØ§Ù‚ÙŠØª Ø§Ù„ØµÙ„Ø§Ø© Ø¯ÙˆØ±ÙŠØ§Ù‹
        function updateCurrentPrayer() {
            const now = new Date();
            const currentTime = now.getHours() * 60 + now.getMinutes();
            
            const prayerTimes = [
                { name: 'ÙØ¬Ø±', time: 4 * 60 + 45, element: document.querySelectorAll('.prayer-time')[0] },
                { name: 'Ø´Ø±ÙˆÙ‚', time: 6 * 60 + 12, element: document.querySelectorAll('.prayer-time')[1] },
                { name: 'Ø¸Ù‡Ø±', time: 12 * 60 + 30, element: document.querySelectorAll('.prayer-time')[2] },
                { name: 'Ø¹ØµØ±', time: 15 * 60 + 45, element: document.querySelectorAll('.prayer-time')[3] },
                { name: 'Ù…ØºØ±Ø¨', time: 18 * 60 + 20, element: document.querySelectorAll('.prayer-time')[4] },
                { name: 'Ø¹Ø´Ø§Ø¡', time: 19 * 60 + 50, element: document.querySelectorAll('.prayer-time')[5] }
            ];
            
            // Ø¥Ø²Ø§Ù„Ø© Ø§Ù„ØªÙ…ÙŠÙŠØ² Ù…Ù† Ø¬Ù…ÙŠØ¹ Ø§Ù„Ø£ÙˆÙ‚Ø§Øª
            prayerTimes.forEach(prayer => {
                prayer.element.classList.remove('current');
            });
            
            // Ø§Ù„Ø¹Ø«ÙˆØ± Ø¹Ù„Ù‰ Ø§Ù„ØµÙ„Ø§Ø© Ø§Ù„Ø­Ø§Ù„ÙŠØ© Ø£Ùˆ Ø§Ù„ØªØ§Ù„ÙŠØ©
            let currentPrayer = null;
            for (let i = 0; i < prayerTimes.length; i++) {
                if (currentTime >= prayerTimes[i].time && 
                    (i === prayerTimes.length - 1 || currentTime < prayerTimes[i + 1].time)) {
                    currentPrayer = prayerTimes[i];
                    break;
                }
            }
            
            // Ø¥Ø°Ø§ ÙƒØ§Ù† Ø§Ù„ÙˆÙ‚Øª Ù‚Ø¨Ù„ Ø§Ù„ÙØ¬Ø±ØŒ Ø§Ø®ØªØ± Ø§Ù„Ø¹Ø´Ø§Ø¡
            if (!currentPrayer && currentTime < prayerTimes[0].time) {
                currentPrayer = prayerTimes[prayerTimes.length - 1];
            }
            
            if (currentPrayer) {
                currentPrayer.element.classList.add('current');
            }
        }

